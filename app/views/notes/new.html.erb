<h1>New Note</h1>

<%= form_for([@note.student, @note]) do |f|%>
 <% if !@note.student %>
  <%= f.label :student %>
  <%= f.collection_select :student_id, Student.all, :id, :first_name %>
<% else %>
    <%= f.hidden_field :student_id %>
<% end %>
  <%= f.label :content %>
  <%= f.text_area :content, size:"70x8" %>
  <%= f.submit %>
<% end %>