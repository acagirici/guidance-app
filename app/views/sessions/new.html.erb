<h1>Log In </h1>

<%= flash[:error] if flash[:error] %>

<%= form_tag('/login', method: :post) do %>

    <%= label_tag(:username, "Your Username:") %>
    <%= text_field_tag(:username) %><br>

    <%= label_tag(:password, "Your password:") %>
    <%= password_field_tag(:password) %> <br>


    <%= submit_tag("Sign In") %>

<% end %> 