<%= render partial: "layouts/errors", locals: {object: @student} %>

<%= form_for(@student) do |f| %>

    <%= f.label :first_name %>:
    <%= f.text_field :first_name %><br></br>

    <%= f.label :last_name %>:
    <%= f.text_field :last_name %><br></br>

    <%= f.label :birth_date %>:
    <%= f.date_field :birth_date %><br></br>

    <%= f.label :grade_level %>:
    <%= f.number_field :grade_level %><br></br>

    <%= f.label :career_goal %>:
    <%= f.text_field :career_goal %><br></br>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <%= f.submit %>

<% end %>

